    <nav>
        <ul>
            <div class="logo">
                <li>
                    <header><a href="/"><img src="./logo.gif" alt="Leaf Forums Logo" height="40%" width="40%"></a></header>
                </li>
            </div>
            <div class="buttons">
                <li>
                    <a href="/dashboard">Dashboard</a>
                </li>
                <li><a href="#">Logout</a></li>
            </div>
        </ul>
    </nav>